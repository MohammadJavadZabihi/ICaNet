<Window x:Class="ICaNet.WindowsApp.Views.ProductViews.AddNewProductWindw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICaNet.WindowsApp.Views.ProductViews"
        mc:Ignorable="d"
        Height="460" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        FontFamily="Vazir" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Loaded="Window_Loaded">

    <Border Background="White" CornerRadius="20" BorderThickness="1"  BorderBrush="#2B2B2B">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
               Text="اطلاعات محصول جدید" 
               FontSize="22" 
               FontWeight="Bold" 
               Margin="0,0,0,20"
               HorizontalAlignment="Center"
               FontFamily="Vazir"/>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="نام محصول:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtName" Style="{StaticResource textBoxStyle}" Template="{StaticResource TextBoxtTemplate}" Width="318"/>

                        <Label Content="تعداد:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtCount" Style="{StaticResource textBoxStyle}" Template="{StaticResource TextBoxtTemplate}" Width="318" PreviewTextInput="txtCount_PreviewTextInput"/>

                        <Label Content="واحد اندازه‌گیری:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbUnitOfMeasurement" Style="{StaticResource ModernComboBoxStyle}" Height="35" Width="318">
                            <ComboBoxItem Content="عدد"/>
                            <ComboBoxItem Content="کیلوگرم"/>
                            <ComboBoxItem Content="متر"/>
                            <ComboBoxItem Content="لیتر"/>
                            <ComboBoxItem Content="بسته"/>
                        </ComboBox>

                        <Label Content="کد محصول:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtCode" Style="{StaticResource textBoxStyle}" Template="{StaticResource TextBoxtTemplate}" Width="318"/>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <Label Content="قیمت:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtPrice" Style="{StaticResource textBoxStyle}" Template="{StaticResource TextBoxtTemplate}" Width="318" PreviewTextInput="txtPrice_PreviewTextInput"/>

                        <Label Content="نام تامین‌کننده:" Style="{StaticResource LabelStyle}"/>

                        <ComboBox x:Name="cmbSupplier" Style="{StaticResource ModernComboBoxStyle}" Height="35" Width="318">
                            <ComboBoxItem Content="محمد"/>
                            <ComboBoxItem Content="ماهان" />
                        </ComboBox>

                        <Label Content="وضعیت:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbStatus" Style="{StaticResource ModernComboBoxStyle}" SelectedIndex="0" Height="35" Width="318">
                            <ComboBoxItem Content="فعال"/>
                            <ComboBoxItem Content="غیرفعال" />
                        </ComboBox>

                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                Content="ذخیره" 
                Style="{StaticResource btnAdd}" 
                Background="#2196F3" 
                Foreground="White"
                Click="btnSave_Click"/>

                <Button x:Name="btnCancel" 
                Content="انصراف" 
                Style="{StaticResource btnAdd}" 
                Background="#F44336" 
                Foreground="White"
                Click="btnCancel_Click" Margin="20 0 0 0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>