<Page x:Class="ICaNet.WindowsApp.Views.ProductViews.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICaNet.WindowsApp.Views.ProductViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Loaded="Page_Loaded">
    <Border Background="#FFFFFF" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="txtSearcher" Style="{StaticResource textBoxStyle}" Template="{StaticResource TextBoxtTemplate}" Tag="جست و جو کنید" FlowDirection="LeftToRight" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" TextChanged="txtSearcher_TextChanged"/>

                <Button x:Name="btnAddProduct" Style="{StaticResource btnAdd}" Margin="60 0 0 0" Content="کالا جدید" Background="#00c873" Click="btnAddProduct_Click"/>
            </StackPanel>

            <DataGrid x:Name="productDataGrid" Grid.Row="1" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="20" Background="Transparent" Foreground="#2B2B2B">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ProductId}" Header="#" IsReadOnly="True" CanUserResize="False" Width="auto"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header="نام" IsReadOnly="True"  Width="*"/>
                    <DataGridTextColumn Binding="{Binding Statuce}" Header="وضعیت" IsReadOnly="True"  Width="*"/>
                    <DataGridTextColumn Binding="{Binding Count}" Header="تعداد" IsReadOnly="True"  Width="*"/>
                    <DataGridTextColumn Binding="{Binding UnitOfMeasurement}" Header="نوع" IsReadOnly="True"  Width="*"/>
                    <DataGridTextColumn Binding="{Binding Code}" Header="کدشناسایی" IsReadOnly="True"  Width="*"/>
                    <DataGridTemplateColumn Header="عملیات" Width="auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnDelet" Background="#B13939" Style="{StaticResource btnDeletandEditeSHoProduct}" Margin="0 0 10 0" Click="btnDelet_Click">
                                        <Button.Content>
                                            <Image Source="/Images/DeletIcno.png"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="btnEdite" Background="#176886" Style="{StaticResource btnDeletandEditeSHoProduct}" Click="btnEdite_Click">
                                        <Button.Content>
                                            <Image Source="/Images/EditeIcon.png"/>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button Style="{StaticResource btn}" FontSize="12.5" x:Name="btnLoadMore" Grid.Row="2"  Content="بارگیری بیشتر" Visibility="Hidden" Click="btnLoadMore_Click" Margin="0,10,0,10" HorizontalAlignment="Center" Foreground="#0078ff" Background="Transparent" Width="70" Height="30"/>
        </Grid>
    </Border>
</Page>
