<Window x:Class="ICaNet.WindowsApp.Views.CustomeMessageBox.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICaNet.WindowsApp.Views.CustomeMessageBox"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="200" Width="400" WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded">

    <Border CornerRadius="10" Background="#FFFFFF" Padding="10" BorderBrush="#2B2B2B" BorderThickness="1.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="lblTitle" Text="تایتل مورد نظر" FontFamily="Vazir" FontSize="12"  HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Light"/>

            <TextBlock Grid.Row="1" x:Name="lblTextMessage" Text="متن مورد نظر" FontFamily="Vazir" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnOk" Foreground="White" Style="{StaticResource btn}" Margin="0 0 10 0" Background="#3A7D44" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnOk_Click"/>

                <Button x:Name="btnNo" Foreground="White" Style="{StaticResource btn}" Background="#F93827" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnNo_Click"/>
            </StackPanel>
            
        </Grid>

    </Border>
</Window>
